@model Web_development_project_U2.Models.ViewModels.PrestamoViewModel
@{
    ViewBag.Title = "Editar prestamo";
}

<div class="container p-3">
    <div class="row p-5 justify-content-center">
        <div class="col-md-6 bg-light rounded-5 p-5">
            <center>
                <h3 class="text-primary p-4">@ViewBag.Title</h3>
            </center>
            @using (Html.BeginForm("Editar", "Prestamo", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-12">
                        @Html.HiddenFor(d => d.Id)
                        <div class="mt-3">
                            @Html.LabelFor(d => d.LibroId)
                            @Html.DropDownListFor(d => d.LibroId, ViewBag.LibrosList as SelectList, "Seleccione un libro", new { @class = "form-control" })
                            @Html.ValidationMessageFor(d => d.LibroId)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.FechaDevolucion)
                            @Html.TextBoxFor(d => d.FechaDevolucion, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                            @Html.ValidationMessageFor(d => d.FechaDevolucion)
                        </div>
                        <div class="mt-3 text-center">
                            <input value="Actualizar" class="btn btn-primary" type="submit" />
                        </div>
                        <div class="mt-3 text-center">
                            @Html.ActionLink("Volver a la lista de prestamos", "prestamo", "Prestamo", null, new { @class = "btn btn-primary" })
                        </div>     
                    </div>
                </div>
            }
        </div>
    </div>
</div>


