@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="wrapper">
    <div class="form-box login">
        <h2>Login</h2>
        <form action="" id="frm">
            <div class="input-box">
                <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
                <input type="email" id="email_usu" name="email_usu" autocomplete="off" required>
                <label for="email">Correo</label>
            </div>
            <div class="input-box">
                <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
                <input type="password" id="pass" name="pass" required>
                <label for="password">Contraseña</label>
            </div>
            <div class="remember-forgot">
                <label for=""><input type="checkbox">Recuerdame</label>
                <a href="#">¿Haz olvidado tu contraseña?</a>
            </div>
            <button type="submit" class="btn">Iniciar sesión</button>
            <div class="login-register">
                <p>
                    ¿No tienes cuenta?
                    @Html.ActionLink("Registrarme", "Registro", "Usuario", new { area = "" }, new { @class = "" })
                </p>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
    $(document).ready(function () {
        $("#frm").submit(function (e) {
            e.preventDefault();

            url = "@Url.Content("~/Usuario/Enter")";
            parametros = $(this).serialize();

            $.post(url, parametros, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/Home/Index")";
                } else if (data == "2") {
                    document.location.href = "@Url.Content("~/Home/Admin")";
                } else {
                    alert(data);
                }
            })
        })
    })
    </script>
}