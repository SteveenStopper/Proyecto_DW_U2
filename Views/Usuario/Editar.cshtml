@model Web_development_project_U2.Models.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Editar Usuario";
}


<div class="container p-3">
    <div class="row p-5 justify-content-center">
        <div class="col-md-6 bg-light rounded-5 p-5">
            <center>
                <h3 class="text-primary p-4">Editar Usuario</h3>
            </center>
            @using (Html.BeginForm("Editar", "Usuario", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.HiddenFor(d => d.Id_usu)

                <div class="form-group">
                    @Html.LabelFor(m => m.Direccion)
                    @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control my-2", required = "required" })
                    <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Direccion)</div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Telefono)
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control my-2", required = "required", pattern = "[0-9]+" })
                    <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Telefono)</div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Apellido)
                    @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control my-2", required = "required" })
                    <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Apellido)</div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Nombre)
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control my-2", required = "required" })
                    <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Nombre)</div>
                </div>
                <center>
                    <button type="submit" class="btn btn-primary mt-3">Actualizar</button>
                </center>
                
            }
            <div class="mt-4 text-center">
                @Html.ActionLink("Eliminar usuario", "Eliminar", "Usuario", new { area = "" }, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
</div>

