@model Web_development_project_U2.Models.ViewModels.LibroViewModel
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutAdminEdit.cshtml";
}

<h2 class="mt-3">Editar Libro</h2>

<div class="container p-3">
    <div class="row p-5 justify-content-center">
        <div class="col-md-6 bg-light rounded-5 p-5">
            <center>
                <h3 class="text-primary p-4">Editar Libro</h3>
            </center>

            @using (Html.BeginForm("Editar", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-md-12">
                        @Html.HiddenFor(d => d.id)
                        <div class="mt-3">
                            @Html.LabelFor(d => d.titulo)
                            @Html.TextBoxFor(d => d.titulo, new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.titulo)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.autor)
                            @Html.TextBoxFor(d => d.autor, new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.autor)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.anio_publicacion)
                            @Html.TextBoxFor(d => d.anio_publicacion, new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.anio_publicacion)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.categoria) 
                            @Html.TextBoxFor(d => d.categoria, new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.categoria)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.imagen, "Imagen")
                            <br />
                            <input type="file" name="nuevaImagen" id="nuevaImagen" class="btn my-2"/>
                            <br />
                            @Html.ValidationMessageFor(d => d.imagen)
                        </div>
                        <div class="mt-3 text-center">
                            <input value="Actualizar" class="btn btn-primary" type="submit" />
                        </div>
                        <div class="mt-3 text-center">
                            @Html.ActionLink("Volver a la lista de libros", "Admin", "Home", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>