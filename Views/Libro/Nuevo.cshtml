@model Web_development_project_U2.Models.ViewModels.LibroViewModel
@{
    ViewBag.Title = "Nuevo Libro";
    Layout = "~/Views/Shared/_LayoutAdminEdit.cshtml";
}

<h2 class="mt-3">@ViewBag.Title</h2>

<div class="container p-3">
    <div class="row p-5 justify-content-center">
        <div class="col-md-6 bg-light rounded-5 p-5">
            <center>
                <h3 class="text-primary p-4">Agregar Libro</h3>
            </center>

            @using (Html.BeginForm("Nuevo", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="mt-3">
                            @Html.LabelFor(d => d.titulo)
                            @Html.TextBoxFor(d => d.titulo, "", new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.titulo, null)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.autor)
                            @Html.TextBoxFor(d => d.autor, "", new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.autor, null)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.anio_publicacion)
                            @Html.TextBoxFor(d => d.anio_publicacion, "", new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.anio_publicacion, null)
                        </div>
                        <div class="mt-3">
                            @Html.LabelFor(d => d.categoria)
                            @Html.TextBoxFor(d => d.categoria, "", new { @class = "form-control my-2" })
                            @Html.ValidationMessageFor(d => d.categoria, null)
                        </div>
                        <div>
                            @Html.LabelFor(d => d.imagen, htmlAttributes: new { @class = "control-label col-md-12" }) <br />
                            <input type="file" name="imageLoad" value="" class="my-2" />
                            @Html.ValidationMessageFor(d => d.imagen, "", new { @class = "text-danger" })
                        </div>
                        <div class="mt-3 text-center">
                            <input value="Guardar" class="btn btn-primary" type="submit" />
                        </div>
                        <div class="mt-3 text-center">
                            @Html.ActionLink("Volver a la lista de libros", "Admin", "Home", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>